@{
    ViewData["Title"] = "Đăng nhập";
}

@model TUser

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>6 Sister's Pizza</title>
    <style>
        .btn-dark {
            background-color: rgb(255, 112, 7) !important;
            border-color: rgb(255, 112, 7) !important;
            color: white !important;
        }

        .btn-outline-dark {
            color: rgb(255, 112, 7) !important;
            border-color: rgb(255, 112, 7) !important;
        }

            .btn-outline-dark:hover {
                background-color: rgb(255, 112, 7) !important;
                color: white !important;
            }
    </style>
</head>
<body>
    <!-- partial:index.partial.html -->
    <!DOCTYPE html>
    <html lang="es" dir="ltr">
    <head>
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0">
        <meta charset="utf-8">
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;800&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    </head>
    <body>
        <!-- Login 8 - Bootstrap Brain Component -->
        <section class="bg-light p-2 p-md-3 p-xl-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-xxl-11">
                        <div class="card border-light-subtle shadow-sm">
                            <div class="row g-0">
                                <div class="col-12 col-md-6">
                                    <img class="img-fluid rounded-start w-100 h-100 object-fit-cover" loading="lazy" src="../ImagesProduct/PZmargherita.png" alt="Welcome back you've been missed!">
                                </div>
                                <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                                    <div class="col-12 col-lg-11 col-xl-10">
                                        <div class="card-body p-1 p-md-2 p-xl-3">
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="mb-4">
                                                        <div class="text-center mb-3">
                                                            <a asp-controller="Home" asp-action="WelcomePage">
                                                                <img src="../1LayoutIndex/logo_web.jpg" alt="Pizza 6 Sisters Logo" width="130" height="130" style="border-radius: 50%;">
                                                            </a>
                                                        </div>
                                                        <h4 class="text-center">Chào mừng bạn đến với cửa hàng Sixter's Pizza!</h4>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="d-flex gap-3 flex-column">
                                                        <a asp-controller="Login" asp-action="LoginGoogle" class="btn btn-lg btn-outline-dark">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-google" viewBox="0 0 16 16">
                                                                <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z" />
                                                            </svg>
                                                            <span class="ms-2 fs-6">Đăng nhập bằng tài khoản Google</span>
                                                        </a>
                                                    </div>
                                                    <p class="text-center mt-3 mb-4">Hoặc đăng nhập với</p>
                                                </div>
                                            </div>
                                            @* <form action="#!"> *@
                                            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { id = "loginForm" }))
                                            {
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <div class="row gy-3 overflow-hidden">
                                                    <div class="col-12">
                                                        <div class="form-floating mb-2">
                                                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", type = "email", name = "email", id = "email", placeholder = "name@example.com" })
                                                            <span asp-validation-for="Email" class="text-danger" style="color: red;"></span>
                                                            @* <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required> *@
                                                            <label for="email" class="form-label">Email</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-12">
                                                        <div class="form-floating mb-2">
                                                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password", name = "password", id = "password", placeholder = "Password" })
                                                            @* <input type="password" class="form-control" name="password" id="password" value="" placeholder="Password" required> *@
                                                            <label for="password" class="form-label">Mật khẩu</label>
                                                            <span asp-validation-for="Password" class="text-danger" style="color: red;"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-12">
                                                        <div class="form-check">
                                                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" value="" name="remember_me" id="remember_me">
                                                            <label class="form-check-label text-secondary" for="remember_me">
                                                                Giữ đăng nhập
                                                            </label>
                                                        </div>
                                                    </div>
                                                    <div class="col-12">
                                                        <div class="d-grid">
                                                            <button class="btn btn-dark btn-lg" type="submit">Đăng nhập</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            @* </form> *@
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="d-flex gap-2 gap-md-3 flex-column flex-md-row justify-content-md-center mt-3">
                                                        <a asp-controller="User" asp-action="Resgister" class="link-secondary text-decoration-none">Đăng ký tài khoản</a>
                                                        <a asp-controller="User" asp-action="ForgotPassword" class="link-secondary text-decoration-none">Quên mật khẩu</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </body>
</html>
<!-- partial -->
<script src="./../1LayoutLogin/script.js"></script>

    @if (TempData["Content"] != null)
    {
    <script src="/lib/jquery//dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">

        toastr.error('@TempData["Content"]', '@TempData["Title"]');
    </script>
    }

</body>
</html>


